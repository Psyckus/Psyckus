
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
 
    <title>Index</title>
    <link href="~/Content/style/Login.css" rel="stylesheet" />
</head>
<body>
    	<header>
		<div class="header-container">
			<div class="logo">
				<img src="~/Imagenes/logoLover.jpeg">
			</div>
		</div>
	</header>
	<div class="card">
		
		<div class="card-header">
			
		</div>
		<div class="card-footer">
			<img src="~/Imagenes/administrador.png">
		</div>
		<div class="card-body">
            <form action="@Url.Action("Index","Acceso")" method="post">
                <input type="email" name="correo" placeholder="Correo Electronico" >
                <input type="password" name="clave" placeholder="Contrase&ntilde;a" >
                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                    <button type="submit">Iniciar Sesion</button>
                    <p><a href="@Url.Action("Reestablecer","Acceso")">¿Olvidaste tu contraseña?</a></p>
                </div>
                @{
                    if (ViewBag.Error != null)
                    {

                        <div class="form-floating mb-3">
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.Error
                            </div>
                        </div>
                    }
                }


            </form>
		</div>
	
	</div>
	<footer>
		<div class="footer-container">
			<p>Copyright &copy; 2023</p>
		</div>
	</footer>
</body>
</html>
